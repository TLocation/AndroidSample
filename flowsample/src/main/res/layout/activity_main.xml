<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<Button
		android:layout_marginTop="10dp"
		android:text="StateFlow按钮"
		android:id="@+id/stateFlowBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<TextView
		android:textSize="20sp"
		android:id="@+id/stateFlowText"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toBottomOf="@id/stateFlowBtn"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<Button
		android:layout_marginTop="20dp"
		android:text="ShareFlow按钮"
		android:id="@+id/shareFlowBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/stateFlowText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<Button
		android:layout_marginTop="20dp"
		android:text="注册ShareFlow按钮"
		android:id="@+id/registerShareFlowBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/shareFlowBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<Button
		android:layout_marginTop="20dp"
		android:text="跳转到新界面"
		android:id="@+id/jumpNewPageFlowBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/registerShareFlowBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<Button
		android:layout_marginTop="20dp"
		android:text="弹出toast"
		android:id="@+id/toastBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/jumpNewPageFlowBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>